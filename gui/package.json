{
  "name": "iload-gui",
  "version": "1.0.0",
  "description": "iLoad Forecasting Utility - Electron GUI",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev:vue": "vite",
    "dev:electron": "tsc -p electron/tsconfig.json && cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev:vue\" \"npm run wait-and-electron\"",
    "wait-and-electron": "wait-on http://localhost:5173 && npm run dev:electron",
    "build:vue": "vue-tsc && vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "npm run build:vue && npm run build:electron",
    "preview": "vite preview",
    "electron:build": "npm run build && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^2.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.iload.forecasting",
    "productName": "iLoad Forecasting",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
